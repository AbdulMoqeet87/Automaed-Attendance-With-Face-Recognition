# Backend Environment Variables
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# MongoDB Connection (Required for Production)
# For local development: mongodb://localhost:27017/
# For production (MongoDB Atlas): mongodb+srv://username:password@cluster.mongodb.net/database_name
MONGODB_URI=mongodb://localhost:27017/

# Upload Settings
MAX_CONTENT_LENGTH=10485760
UPLOAD_FOLDER=uploads

# ML Model Settings
RECOGNITION_THRESHOLD=0.6
FACENET_MODEL_PATH=ml_module/facenet_keras.h5

# Optional: Server Configuration
HOST=0.0.0.0
PORT=5000
